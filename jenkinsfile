def gv

pipeline{
    agent any
    parameters{
        choice(name: 'Stage', choices: ['One', 'Two', 'Three'], description: 'Pick Stage to run')
    }
    stages{
        stage('init'){
            script{
                gv=load 'hi.groovy'
            }
        }

        stage('One'){
            when{
                expression{
                    params.Stage == 'One'
                }
            }
            steps{
                script{
                    gv.one()
                }               
            }
        }
        stage('Two'){
            when{
                expression{
                    params.Stage == 'Two'
                }
            }
            steps{
                script{
                    gv.two()
                }
            }

        }
        stage('Three'){
            when{
                expression{
                    params.Stage == 'Three'
                }
            }
            steps{
                script{
                    gv.three()
                }
            }

        }
    }
    post{
        always{
            echo "Param $params.Stage run is done"
        }
    }
}